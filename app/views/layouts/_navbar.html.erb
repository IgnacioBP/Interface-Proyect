<div data-controller="sidebar" class="wrapper">
  <div class="d-flex flex-column flex-shrink-0 p-3 text-white" id="sidebar">
    
    <!-- User Profile at the Top -->
    <div class="user-profile mb-4" style="margin-top:20px;">
      <a class="d-flex flex-column align-items-center text-white text-decoration-none">
        <%= image_tag("profileQua.png", alt: "Profile Pic", class: "rounded-circle mb-2", width: "50", height: "50" ) %>
        <span class="fs-5 sidebar-text"><%= current_user.first_name %> <%= current_user.last_name %></span>
      </a>
    </div>
    
    <!-- Sidebar Menu -->
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <a href="/" class="nav-link text-white">
          <i class="bi bi-speedometer2"></i><span class="ms-2 sidebar-text">Quacks</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/users/<%= current_user.id %>" class="nav-link text-white">
          <i class="bi bi-person-fill"></i><span class="ms-2 sidebar-text">Perfil</span>
        </a>
      </li>
      <!-- New button to create a new tweet -->
      <li class="nav-item">
        <a href="/tweets/new" class="nav-link text-white">
          <i class="bi bi-pencil-square"></i><span class="ms-2 sidebar-text">Nuevo Quack</span>
        </a>
      </li>
    </ul>
    
    <!-- Logout Button at the Bottom -->
    <!-- Logout Button at the Bottom -->
    <div class="logout-section mt-auto" style="margin-bottom: 70px;">
      <%= link_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: 'btn btn-sm btn-outline-light w-100 d-flex align-items-center justify-content-center logout-button' do %>
        <i class="bi bi-box-arrow-right"></i>
        <span class="ms-2 sidebar-text">Sign out</span>
      <% end %>
    </div>

  </div>

  <!-- Main Content -->
  <div id="content" class="flex-grow-1 p-4">
  </div>
</div>


<style>
.wrapper {
  display: flex;
  width: 100%;
  align-items: stretch;
  margin: 0;
  padding: 0;
}

/* Sidebar */
#sidebar {
  width: 250px;
  min-height: 100vh;
  background: #4B6E24;
  color: #f2f0ef;
  transition: width 0.3s ease-in-out, background-color 0.3s ease-in-out;
  position: fixed;
  top: 70px;
  left: 0;
  z-index: 1000;
}

/* Ajustes en pantallas peque침as */
@media (max-width: 768px) {
  #sidebar {
    width: 0;
    background: transparent; /* Fondo transparente en pantallas peque침as */
    overflow: hidden;
  }
  #sidebar.collapsed {
    width: 80px;
    background: #4B6E24; /* Mantener el color solo cuando est치 colapsado */
  }
  #content {
    margin-left: 0;
  }
  #content.collapsed {
    margin-left: 80px;
  }
}

/* Ajuste del contenido para evitar superposici칩n con el sidebar */
#content {
  margin-left: 250px;
  padding: 20px;
  min-height: 100vh;
  transition: margin-left 0.3s ease-in-out;
}

</style>
