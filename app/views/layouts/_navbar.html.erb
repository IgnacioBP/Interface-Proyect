<div data-controller="sidebar" class="wrapper">
  <div class="d-flex flex-column flex-shrink-0 p-3 bg-dark text-white" id="sidebar">
    <!-- Toggle Button -->
    <button class="btn btn-outline-light mb-3" id="toggleSidebar">
      <i class="bi bi-list"></i>
    </button>
    &nbsp;
    
    
    <!-- User Profile at the Top -->
    <div class="user-profile mb-4">
      <a href="/profile" class="d-flex flex-column align-items-center text-white text-decoration-none">
        <img src="https://github.com/mdo.png" alt="Profile image" width="50" height="50" class="rounded-circle mb-2">
        <span class="fs-5 sidebar-text">John Doe</span>
      </a>
    </div>
    
    <!-- Sidebar Menu -->
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <a href="/tweets" class="nav-link text-white">
          <i class="bi bi-speedometer2"></i><span class="ms-2 sidebar-text">Quacks</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/comments" class="nav-link text-white">
          <i class="bi bi-bell"></i><span class="ms-2 sidebar-text">Notificaciones</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link text-white">
          <i class="bi bi-people"></i><span class="ms-2 sidebar-text">Seguidores</span>
        </a>
      </li>
      <!-- New button to create a new tweet -->
      <li>
        <a href="/tweets/new" class="nav-link text-white">
          <i class="fs-5 bi-pencil-square"></i><span class="ms-1 d-none d-sm-inline sidebar-text">Nuevo Quack</span>
        </a>
      </li>
    </ul>
    
    <!-- Logout Button at the Bottom -->
    <!-- Logout Button at the Bottom -->
<div class="logout-section mt-auto">
  <%= link_to destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: 'btn btn-sm btn-outline-light w-100 d-flex align-items-center justify-content-center logout-button' do %>
    <i class="bi bi-box-arrow-right"></i>
    <span class="ms-2 sidebar-text">Sign out</span>
  <% end %>
</div>

  </div>

  <!-- Main Content -->
  <div id="content" class="flex-grow-1 p-4">
    <%= render partial: 'layouts/flash' %>
    <%= yield %>
  </div>
</div>


<style>
.wrapper {
  display: flex;
  width: 100%;
  align-items: stretch;
  margin: 0;
  padding: 0;
}

/* Sidebar */
#sidebar {
  width: 250px;
  min-height: 100vh;
  background: #343a40;
  color: #f2f0ef;
  transition: width 0.3s ease-in-out;
  margin: 0;
  padding: 0;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
}
/* Hide sidebar text when collapsed */
#sidebar.collapsed .sidebar-text {
  display: none;
}

#sidebar.collapsed .logout-button {
  justify-content: center;
}

#sidebar.collapsed .logout-button i {
  font-size: 1.5rem; /* Ajustamos el tamaño del icono para que sea más visible */
}

/* Adjust content for the main section to prevent overlap with sidebar */
#content {
  margin-left: 250px;
  padding: 20px;
  min-height: 100vh;
  transition: margin-left 0.3s ease-in-out;
}

#sidebar.collapsed {
  width: 80px;
}

#content.collapsed {
  margin-left: 80px;
}

/* Hide sidebar text when collapsed */
#sidebar.collapsed .sidebar-text {
  display: none;
}

#sidebar.collapsed .nav-link {
  justify-content: center;
  padding: 15px 0;
}

/* User Profile */
.user-profile {
  padding-bottom: 10px;
}

/* User Profile Image and Name */
.user-profile a {
  display: flex;
  align-items: center;
  color: #f2f0ef;
  text-decoration: none;
}

/* Logout Button Styling */
.logout-section {
  padding-top: 10px;
}

@media (max-width: 768px) {
  #sidebar {
    width: 0;
    overflow: hidden;
  }
  #sidebar.collapsed {
    width: 80px;
  }
  #content {
    margin-left: 0;
  }
  #content.collapsed {
    margin-left: 80px;
  }
}
</style>

<script>
document.addEventListener("turbo:load", function() {
  const toggleSidebarButton = document.getElementById("toggleSidebar");
  const sidebar = document.getElementById("sidebar");
  const content = document.getElementById("content");

  if (toggleSidebarButton && sidebar && content) {
    toggleSidebarButton.addEventListener("click", function() {
      sidebar.classList.toggle("collapsed");
      content.classList.toggle("collapsed");
    });
  }
});
</script>
