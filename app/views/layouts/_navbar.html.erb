<div data-controller="sidebar" class="wrapper">
  <div class="d-flex flex-column flex-shrink-0 p-3 bg-dark text-white" id="sidebar">
    <!-- Toggle Button -->
    <button class="btn btn-outline-light mb-3" id="toggleSidebar">
      <i class="bi bi-list"></i>
    </button>

    <!-- Brand Name -->
    <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
      <span class="fs-4 sidebar-text">Quacker</span>
    </a>

    <!-- Sidebar Menu -->
    <ul class="nav nav-pills flex-column mb-auto">
      <li class="nav-item">
        <a href="/tweets" class="nav-link text-white">
          <i class="bi bi-speedometer2"></i><span class="ms-2 sidebar-text">Quacks</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="/comments" class="nav-link text-white">
          <i class="bi bi-bell"></i><span class="ms-2 sidebar-text">Notificaciones</span>
        </a>
      </li>
      <li class="nav-item">
        <a href="#" class="nav-link text-white">
          <i class="bi bi-people"></i><span class="ms-2 sidebar-text">Seguidores</span>
        </a>
      </li>
    </ul>

    <!-- User Section with Logout -->
    <div class="user-section mt-auto d-flex align-items-center">
      <img src="https://github.com/mdo.png" alt="Profile image" width="28" height="28" class="rounded-circle me-2">
      <div class="d-flex flex-column">
        <span class="sidebar-text">John Doe</span>
        <%= link_to 'Sign out', destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: 'btn btn-sm btn-outline-light mt-2' %>
      </div>
    </div>
  </div>

  <!-- Main Content -->
  <div id="content" class="flex-grow-1 p-4">
    <%= render partial: 'layouts/flash' %>
    <%= yield %>
  </div>
</div>

<style>
.wrapper {
  display: flex;
  width: 100%;
  align-items: stretch;
  margin: 0; /* Eliminamos márgenes adicionales */
  padding: 0; /* Eliminamos cualquier padding */
}

/* Sidebar */
#sidebar {
  width: 250px;
  min-height: 100vh;
  background: #343a40;
  color: #f2f0ef;
  transition: width 0.3s ease-in-out;
  margin: 0; /* Aseguramos que no haya margen */
  padding: 0; /* Aseguramos que no haya padding adicional */
  position: fixed; /* Fijamos el sidebar para que esté siempre visible en el lado izquierdo */
  top: 0;
  left: 0;
  z-index: 1000; /* Aseguramos que el sidebar esté en la parte superior */
}

/* Ajuste del contenido principal para evitar superposición con el sidebar */
#content {
  margin-left: 250px; /* Compensa el espacio del sidebar */
  padding: 20px;
  min-height: 100vh;
  transition: margin-left 0.3s ease-in-out;
}

#sidebar.collapsed {
  width: 80px;
}

/* Ajustar el contenido cuando el sidebar está colapsado */
#content.collapsed {
  margin-left: 80px;
}

/* Ocultar texto del sidebar cuando está colapsado */
#sidebar.collapsed .sidebar-text {
  display: none;
}

#sidebar.collapsed .nav-link {
  justify-content: center;
  padding: 15px 0;
}

/* User Section */
.user-section {
  padding-top: 10px;
}

@media (max-width: 768px) {
  #sidebar {
    width: 0;
    overflow: hidden;
  }
  #sidebar.collapsed {
    width: 80px;
  }
  #content {
    margin-left: 0; /* En pantallas pequeñas, el contenido ocupa todo el ancho */
  }
  #content.collapsed {
    margin-left: 80px;
  }
}
</style>

<script>
document.addEventListener("turbo:load", function() {
  const toggleSidebarButton = document.getElementById("toggleSidebar");
  const sidebar = document.getElementById("sidebar");
  const content = document.getElementById("content");

  if (toggleSidebarButton && sidebar && content) {
    toggleSidebarButton.addEventListener("click", function() {
      sidebar.classList.toggle("collapsed");
      content.classList.toggle("collapsed");
    });
  }
});
</script>
