<!DOCTYPE html>
<html>
<head>
  <title>ü¶ÜQuacker</title>
  <meta name="viewport" content="width=device-width,initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
  <%= javascript_include_tag "application", "data-turbo-track": "reload", defer: true %>
  
  <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-whatever-hash" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
  <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.9.1/font/bootstrap-icons.min.css" rel="stylesheet">
</head>
<body style="background-color: #f7f6dc;">

  <% if user_signed_in? %>
    <!-- Navbar Superior -->
    <nav class="navbar navbar-light shadow-sm sticky-top" style="background-color: #f6b528;">
      <div class="container-fluid" style="height: 70px;">
        <!-- Logo de Quacker -->
        <a class="navbar-brand" href="/">
          <%= image_tag("QuaDiagonal.png", alt: "No quacks", class: "no-tweets-image", height: 80, width: 200) %>
          Quacker
        </a>
        
        <!-- Search Bar -->
        <%= form_with url: search_hashtag_path, method: :get, local: true, class: "d-flex ms-auto", id: "searchForm" do %>
          <%= text_field_tag :query, params[:query], placeholder: "Buscar tweets por hashtag", class: "form-control me-2" %>
          <%= hidden_field_tag :user_id, @user.id if @user %>
          <%= submit_tag "Buscar", class: "btn btn-search", id: "searchButton" %>
        <% end %>
      </div>
    </nav>
  <% end %>

  <!-- Contenedor principal -->
  <div class="<%= user_signed_in? ? 'container-fluid' : 'fullscreen-center' %>">
    <% if user_signed_in? %>
      <div class="row flex-nowrap">
        
        <!-- Sidebar Column -->
        <div class="wrapper col-auto px-sm-2 px-0 d-none d-sm-flex flex-column sticky-top vh-100" id="mainSidebar">
          <%= render partial: 'layouts/navbar' %>
        </div>
        
        <!-- Main Content Column -->
        <main class="col overflow-auto" id="content">
          <%= render partial: 'layouts/flash' %>
          <%= yield %>
        </main>
        
      </div>
    <% else %>
      <!-- Contenido para usuarios no autenticados, centrado vertical y horizontalmente -->
      <main class="text-center">
        <%= yield %>
      </main>
    <% end %>
  </div>


  <% unless current_page?(new_user_session_path) || current_page?(new_user_registration_path) %>
    <%= link_to new_tweet_path, class: "floating-btn animate__animated animate__jello" do %>
      <%= image_tag("gifs/dancin_quacker.gif", alt: "New Tweet", class: "floating-btn-image") %>
    <% end %>
  <% end %>

</body>
</html>



<style>
/* Ajustes generales */
.wrapper {
  display: flex;
  width: 100%;
  align-items: stretch;
}

#mainSidebar {
  width: 250px;
  background: #4B6E24;
  color: #f2f0ef;
  transition: width 0.3s ease-in-out;
  position: fixed;
  top: 70px;
  left: 0;
  z-index: 1000;
}

/* Estado colapsado */
#mainSidebar.collapsed {
  width: 80px;
}

main {
  flex: 1;
  margin-left: 250px;
  transition: margin-left 0.3s ease-in-out;
  padding: 20px;
}

#content.collapsed {
  margin-left: 80px;
}

/* Bot√≥n de b√∫squeda */
.btn-search {
  background-color: #ad4b21;
  color: white;
  transition: transform 0.3s ease-in-out;
}

.btn-search:hover {
  transform: scale(1.1) rotate(1deg);
  transition: transform 0.3s ease-in-out;
}

@keyframes jello {
  0%, 100% { transform: scale(1) rotate(0); }
  25% { transform: scale(1.1) rotate(1deg); }
  50% { transform: scale(1) rotate(-1deg); }
  75% { transform: scale(1.1) rotate(1deg); }
}

.btn-search:hover {
  color: white;
  background-color: #b76109;
  animation: jello 0.5s;
}

/* Ajustes del floating button */
.floating-btn {
  position: fixed;
  bottom: 20px;
  right: 0px;
  margin-right: -50px;
  width: 300px;
  height: 150px;
  border-radius: 50%;
  z-index: 1000;
  transition: transform 0.3s ease-in-out;
}

@keyframes wiggle {
  0% { transform: translate(0, 6px); }
  50% { transform: translate(0, -6px); }
  100% { transform: translate(0, 6px); }
}

.floating-btn:hover {
  animation: wiggle 900ms infinite;
}

.floating-btn-image {
  width: 100%;
  height: auto;
  border-radius: 50%;
  object-fit: cover;
}

/* Media query para pantallas peque√±as */
@media (max-width: 768px) {
  #mainSidebar {
    width: 0;
    overflow: hidden;
  }

  #mainSidebar.collapsed {
    width: 80px;
    background: #4B6E24;
  }

  #content {
    margin-left: 0;
  }

  #content.collapsed {
    margin-left: 80px;
  }
}
  
</style>


<script>
document.addEventListener("turbo:load", function() {
  document.body.addEventListener("click", function(event) {
    const toggleSidebarButton = event.target.closest("#toggleSidebar");
    if (toggleSidebarButton) {
      const sidebar = document.getElementById("sidebar");
      const content = document.getElementById("content");
      sidebar.classList.toggle("collapsed");
      content.classList.toggle("collapsed");
    }
  });

  const registerButton = document.getElementById("searchButton");
  const registrationForm = document.getElementById("searchForm");

  if (registerButton) {
    registerButton.addEventListener("click", function(event) {
      event.preventDefault();

      const audio = new Audio("/sounds/search_sound.mp3");
      audio.play().then(() => {
        setTimeout(function() {
          registrationForm.submit();
        }, 4000);
      }).catch((error) => {
        console.error("Error al reproducir el audio:", error);
        registrationForm.submit();
      });
    });
  }
});

</script>
